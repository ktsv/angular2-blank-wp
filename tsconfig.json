{
    "compilerOptions": {
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata":true,
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "src",
        "outDir" :"dist",
        "moduleResolution": "node",
        "lib": ["es6", "dom"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types" : [
      "core-js"
    ],
  	"exclude": [
      "node_modules"
  	]
}
